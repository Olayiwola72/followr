<% if @twitter_follows.empty? %>
  <div class="alert alert-info">
    <strong>Too soon!</strong> Check back in a few minutes, we haven't started with you yet.
  </div>
<% else %>
  <table class="table table-striped">
    <thead>
      <tr>
        <td>Username</td>
        <td>Hashtag</td>
        <td>Followed</td>
        <td>Unfollowed</td>
        <td>Unfollow User?</td>
      </tr>
    </thead>
    <tbody>
      <%= render partial: 'twitter_follow', collection: @twitter_follows %>
    </tbody>
  </table>
<% end %>