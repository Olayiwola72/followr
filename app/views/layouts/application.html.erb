<!DOCTYPE html>
<html>
<head>
  <title>Followr</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class='nav'>
    <% if current_user %>
      <a href="/dashboard">Home</a> |
      <a href="/twitter_follow_preferences/<%= current_user.twitter_follow_preference.id %>/edit">Preferences</a> |
      <a href="/twitter_follows/<%= current_user.id %>">Following</a> |
      <a href="/logout">Logout</a> 
    <% end %>
  </div>


  <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div> <br>
  <% end %>

  <div class='main'>
    <%= yield %>
  </div>

  <% if Rails.env.production? %>
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-49360029-3', 'auto');
    ga('send', 'pageview');

  </script>
  <% end %>
</body>
</html>
