<%= form_for @twitter_follow_preference do |f| %>
  <% if @twitter_follow_preference.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@twitter_follow_preference.errors.count, "error") %> prohibited this twitter_follow_preference from being saved:</h2>

      <ul>
      <% @twitter_follow_preference.errors.full_messages.each do |message| %>
